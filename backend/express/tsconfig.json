// backend/express/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    // "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".", 
    "paths": {
      "shared/*": ["./shared/*"] 
    }
  },
  "include": [
    "src/**/*.ts",
    "shared/**/*.ts" 
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}